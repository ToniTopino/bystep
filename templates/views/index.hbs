<section class="section_1">
	<div class="container section_1-slider">
		<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
			<div class="carousel-inner" role="listbox">
				{{#each slider}}
				<div class="carousel-item {{#if active}}active{{/if}}">
					{{#if image}}
					<img class="d-block w-100" src="{{image.url}}" alt="First slide">
					{{/if}}
					<div class="carousel-caption col-6 section-1-slide1">
          	<h2 class="col-12 section_1_slider_h">{{{name}}}</h2>
            <p class="col-12 section_1_slider_desc" >{{{description}}}</p>
						<a href="{{href}}" class="section_1_slider_enter">Перейти в раздел</a>
					</div>
				</div>
				{{/each}}
			</div>
			<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
				<span class="carousel-control-prev-icon" aria-hidden="true"></span>
				<span class="sr-only">Previous</span>
			</a>
			<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
				<span class="carousel-control-next-icon" aria-hidden="true"></span>
				<span class="sr-only">Next</span>
			</a>
			<ol class="carousel-indicators">
				{{#each slider}}
				<li data-target="#carouselExampleIndicators" data-slide-to="{{number}}" class="{{#if active}}active{{/if}}"></li>
				{{/each}}
      </ol>
		</div>
	</div>
</section>
<section class="section_2">
	<div class="container section-2-bannerDiv">
		{{#each banner}}
		<a href="{{href}}">
			<div class="col-lg-12 col-sm-12 section-2-banner">
	    	<h2 class="col-6 text-left">{{name}}</h2>
	      <h3 class="col-6 text-left">{{description}}</h3>
			 </div>
		</a>
		{{/each}}
	 </div>
 </section>
