<div class="container">
  <div class="resetpassword-modal">
    <div class="animated fadeIn">
        <div class="panel-body" style="display: flex;justify-content: flex-start;">
          <div class="col-md-12">
            <div style="display:flex; flex-direction: column;margin-bottom:20px;">
              <h3 style="font-weight: 700;font-size: 40px;color: black;">Сбросить пароль</h3>
              <p>Введите новый пароль</p>
            </div>
            <form role="form" method="post" class="col-md-5">
            <input type='hidden' name='resetkey' value='{{key}}'/>

            <input type='hidden' name='_csrf' value='{{csrf_token_value}}'/>
            <div class="form-group">
                <label for="password" class="control-label">Пароль:</label>
                <div class="input-icon">
                <input class="form-control email" style="border-radius: 0;" id="password" name="password" type="password" value="">
                </div>
            </div>
            <div class="form-group">
                <label for="password_confirm" class="control-label">Подтвердите пароль:</label>
                <div class="input-icon">
                <input class="form-control" style="border-radius: 0;" id="password_confirm" name="password_confirm" type="password" value="">
                </div>
            </div>

            <div class="form-group">
                <input type="submit" style="background:black;width: 200px;border-radius: 0;border-color: black; margin-top:20px;" class="btn btn-primary " value="Сохранить изменения">
            </div>
            </form>
          </div>
        </div>
    </div>
  </div>
</div>
