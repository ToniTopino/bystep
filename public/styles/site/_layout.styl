#header
    margin-top 30px


#footer
    margin-top 30px
    border-top 1px solid gray-lighter
    padding-top 30px
    color gray-light


.gallery-image img
    display block
    max-width 100%
    height auto

.carousel-indicators li
  display: inline-block;
  width: 10px;
  height: 10px;
  margin: 5px;
  text-indent: -999px;
  border: 1px solid #fff;
  border-radius: 10px;
  cursor: pointer;
  background-color: #c2c2c2

.carousel-indicators .active
  margin: 5px;
  width: 10px;
  height: 10px;
  background-color: #fff;

.join-modal, .forgotpassword-modal, .singin-modal
  position fixed
  width 100%
  height 100%
  background rgba(0,0,0,0.6)
  z-index 999
  display none

.singin-modal>div
  width: 500px;
  position: relative;
  margin: 10% auto;
  padding: 5px 20px 13px 20px;
  background: #fff;

.join-modal>div, .forgotpassword-modal>div
  width: 500px;
  position: relative;
  margin: 10% auto;
  padding: 5px 20px 13px 20px;
  background: #fff;

.closed-modal
  display: flex;
  justify-content: flex-end;
  margin-top: -10px;
  margin-right: -30px;
  color black
  font-size: 20px;

.join-modal-a:hover
  text-decoration underline
